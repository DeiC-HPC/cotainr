{
  //We support all active python version
  //preferably try to support the upcoming version as well
  "python-version": [
    "3.9",
    "3.10",
    "3.11",
    "3.12",
    // "3.13",
    // "3.14",
  ],
    //Oldest version is from a system we want to support, fx. LUMI
  //Then every major and minor version up to newest version
  "singularity": [
      {
        "provider": "apptainer",
        "version": "1.3.4"
      },
      {
        //Update to 1.4.1 when that is released and tested
        "provider": "apptainer",
        "version": "1.3.6"
      },
      {
        "provider": "singularity-ce",
        "version": "4.1.3"
      },
      {
        "provider": "singularity-ce",
        "version": "4.2.1"
      },
      {
        "provider": "singularity-ce",
        "version": "4.3.0"
      }
  ],
  //Latest operating system version for github runners
  //For both x86 and ARM
  "os":[
    {
     "runs-on": "ubuntu-latest",
      "tag": "amd64",
      "platform": "linux/amd64"
    },
    {
     "runs-on":  "ubuntu-24.04-arm",
     "tag": "arm64",
     "platform": "linux/arm64"
    }
  ]
}
